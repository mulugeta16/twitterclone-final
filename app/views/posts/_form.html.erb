<%= form_with(model: @post, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %> errors occurred.</h2>
      <ul>
      <% @post.errors.full_posts.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="post_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <br>
  <%= form.submit %>
<% end %>
<%= link_to "Return to List of tweets", posts_path %>
