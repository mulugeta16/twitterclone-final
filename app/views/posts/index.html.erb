<h1>List of tweets</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>Content</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td><%= link_to 'Edit this tweet', edit_post_path(post.id) %></td>
      <td><%= link_to 'Delete this tweet', post_path(post.id), method: :delete ,data: { confirm: 'Are you sure to delete this?' } %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'New tweet', new_post_path %>
